<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-access="field" default-cascade="all">
    <class name="org.infinite.identityaccess.domain.model.identity.Group" table="tbl_group" lazy="true">
        <id name="id" type="long" column="id" unsaved-value="-1">
      		<generator class="native"/>
        </id>
        <version column="concurrency_version" name="concurrencyVersion" type="int" />
        <property name="description" column="description" type="java.lang.String" />
        <set name="groupMembers" cascade="all,delete-orphan" inverse="false" lazy="true">
            <key column="group_id" not-null="true" />
            <one-to-many class="org.infinite.identityaccess.domain.model.identity.GroupMember" />
        </set>
        <property name="name" column="name" type="java.lang.String" />
        <component name="tenantId" class="org.infinite.identityaccess.domain.model.identity.TenantId">
            <property name="id" column="tenant_id_id" type="java.lang.String" />
        </component>
    </class>
</hibernate-mapping>
